<!DOCTYPE html>
<html>
  <head>
    <title>Pruebas</title>
    <%- include("partials/head") %>
  </head>
  <body>
    <%- include('partials/navigation') %> 

      <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card bg-dark text-center text-white">
          <div class="card-header">
            <h3>Contact me</h3>
          </div>
          <div class="card-body text-start">
            <form action="/contact" method="POST">
              <div class="mb-3">
                <label for="email">Email</label>
                <input name="email" type="email" class="form-control" placeholder="Introduce tu email..." autofocus>
              </div>
              <div class="mb-3">
                <label for="message">Mensaje:</label>
                <textarea name="message" class="form-control" rows="3" placeholder="Mensaje..."></textarea>
              </div>
              <button type="submit" class="btn btn-primary col-12">Enviar</button>
            </form>
          </div>
        </div>
      </div>
  </body>
</html>